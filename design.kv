<LoginScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            Label:
                text:"User Login"
            TextInput:
                hint_text:"Username"
            TextInput:
                hint_text:"Password"
            Button:
                text:"Login"
        GridLayout:
            cols:2
            Button:
                text:"Forgot Password"
            Button:
                text:"Sign Up"
                on_press:root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            Label:
                text:"Sign Up"
            TextInput:
                hint_text:"Enter Username"
            TextInput:
                hint_text:"Enter Password"

        GridLayout:
            cols:2
            Button:
                text:"back"
                on_press:root.back()
            Button:
                text:"Submit"
<RootWidget>:
    LoginScreen:
        name:"login_screen"

    SignUpScreen:
        name:"signup_screen"                