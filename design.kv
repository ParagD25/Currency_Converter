<LoginScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            Label:
                text:"User Login"
            TextInput:
                hint_text:"Enter Username"
            TextInput:
                hint_text:"Enter Password"
            Button:
                text:"Login"
        GridLayout:
            cols:2
            Button:
                text:"Forgot Password"
            Button:
                text:"Sign Up"
                on_press:root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            Label:
                text:"Sign Up"
            TextInput:
                id: fname
                hint_text:"Enter First Name"
            TextInput:
                id: lname
                hint_text:"Enter Last Name"
            TextInput:
                id: username
                hint_text:"Enter Username"
            TextInput:
                id: password
                hint_text:"Enter Password"

        GridLayout:
            cols:2
            Button:
                text:"Back"
                on_press:root.back()
            Button:
                text:"Submit"
                on_press:root.add_user(root.ids.username.text,root.ids.password.text)

<SignUpSuccessful>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            Label:
                text:"Sign Up Successfull"
        GridLayout:
            cols:2
            Button:
                text:"Back To Login page"
                on_press:root.back_to_login()

<RootWidget>:
    LoginScreen:
        name:"login_screen"

    SignUpScreen:
        name:"signup_screen"    

    SignUpSuccessful:
        name:'sign_up_success'            